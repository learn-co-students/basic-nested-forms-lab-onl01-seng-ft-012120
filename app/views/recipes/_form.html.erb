<%= form_for @recipe do |r|%>
    <%= r.label :title%>
    <%= r.text_area :title%>
    <%= r.fields_for  :ingredients do |ingre|%>
        <%=ingre.label :name%>
        <%=ingre.text_area :name%>
        <br>
        <%=ingre.label :quantity%>
        <%=ingre.text_area :quantity%>
        <br>
    <%end%>
    <%=r.submit%>
<%end%>
        